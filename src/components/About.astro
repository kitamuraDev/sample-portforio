<style>
  .about {
    width: 100%;
    padding: 100px 0;
    background-color: #191919;
  }

  .main {
    width: 1130px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 0 auto;
  }
  .main img {
    width: 430px;
  }

  .about-text {
    width: 550px;
  }
  .about-text h2 {
    color: white;
    font-size: 4rem;
    font-weight: bold;
  }
  .about-text h4 {
    color: white;
    font-size: 1.5rem;
    letter-spacing: 0.02em;
    margin-bottom: 32px;
  }
  .about-text p {
    color: white;
    font-size: 1rem;
    line-height: 1.8em;
    letter-spacing: 0.02em;
    margin-bottom: 32px;
  }
</style>
