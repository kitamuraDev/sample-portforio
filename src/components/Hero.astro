---
import Header from './Header.astro';
---

<section class="hero">
  <Header />
  <div class="content">
    <div class="body">
      <div class="info">
        <h4>Webエンジニア</h4>
        <h1>Kitamura<span>Dev</span></h1>
        <h3>HTML/CSS/TypeScript</h3>
        <div class="newsletter">
          <form>
            <input type="email" placeholder="メールアドレスを入力" />
            <button type="submit">お問い合わせ</button>
          </form>
        </div>
      </div>
      <img src="./person.png" alt="my image" />
    </div>
  </div>
</section>

<style>
  .hero {
    height: 100vh;
    width: 100%;
    background-color: #101010;
  }

  .content {
    margin-top: 120px;
  }
  .content .body {
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    padding-right: 50px;
    padding-left: 270px;
  }

  h1 {
    font-size: 75px;
    color: white;
    margin-bottom: 8px;
  }
  h1 span {
    color: lightseagreen;
  }
  h3 {
    font-size: 24px;
    color: white;
    margin-bottom: 64px;
  }
  h4 {
    font-size: 20px;
    color: white;
    letter-spacing: 0.03em;
  }

  .newsletter form {
    width: 380px;
    position: relative;
  }
  .newsletter form input {
    color: #101010;
    background-color: white;
    width: 100%;
    padding: 15px 130px 15px 15px;
    outline: none;
    border: 2px solid lightseagreen;
    border-radius: 80px;
  }
  .newsletter form button {
    position: absolute;
    border: none;
    border-radius: 80px;
    top: 7px;
    right: 6px;
    padding: 10px 30px;
    color: white;
    background-color: lightseagreen;
    cursor: pointer;
  }
</style>
